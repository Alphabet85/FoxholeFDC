 <Application x:Class="FoxholeFDC.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:my="clr-namespace:FoxholeFDC"
             xmlns:v="clr-namespace:FoxholeFDC.Views"
             xmlns:vm="clr-namespace:FoxholeFDC.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\MainResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <my:MainWindowViewModel x:Key="MainWindowViewModel"/>

            <DataTemplate DataType="{x:Type vm:AddFOViewModel}">
                <v:AddFOView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:AddArtilleryViewModel}">
                <v:AddArtilleryView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
